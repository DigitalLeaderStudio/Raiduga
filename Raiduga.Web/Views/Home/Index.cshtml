@using Raiduga.Web.Localization

@{
	ViewBag.Title = Translations.SiteName;
}

<div class="jumbotron">
	<h1>ASP.NET</h1>
	<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
	<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
	<div class="col-md-12">
		<h1 class="text-center"><strong>@Translations.Home_ContactsUsPrompt</strong></h1>
	</div>
	<div class="col-md-6">
		<div class="contacts">
			@Html.Action("_ContactFormPartial", "Common")
		</div>
	</div>

	<div class="col-md-6">
		<div class="contacts home">
			@Html.Partial("_FastContactsPartial")
		</div>
	</div>
