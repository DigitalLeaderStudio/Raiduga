@using Raiduga.Web.Localization
@model List<Raiduga.Web.Models.Service.ServiceViewModel>

@{
	ViewBag.Title = Translations.Service_Title;
}

<h1 class="text-center"><strong>@Translations.Service_Title</strong></h1>

<div class="services">
	@foreach (var item in Model)
	{
		<div class="service-block center-block">
			<div class="row">
				<div class="col-md-offset-2 col-md-2">
					@{
						var srcAction = item.ImageId.HasValue ?
							Url.Action("Show", "File", new { area = "", id = item.ImageId }) :
							string.Empty;
							
					}
					<img src="@srcAction" alt="@item.Name" />
				</div>
				<div class="col-md-6">
					<h4><strong>@item.Name</strong></h4>
					<hr />
					<p>
						@item.Description
					</p>
					<br />
					<a href="#" class="btn btn-primary pull-right">@Translations.Service_Details</a>
				</div>
			</div>
		</div>
	}
</div>

