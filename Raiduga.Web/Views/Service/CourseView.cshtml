@using Raiduga.Web.Localization
@model Raiduga.Web.Models.Service.CourseViewModel

@{
	ViewBag.Title = Model.Name;
}

<div class="courses">
	<ol class="breadcrumb">
		<li><a href="@Url.Action("Index", "Service", new { area = "" })">@Translations.Service_Title</a></li>
		<li>
			<a href="@Url.Action("CourseList", "Service", new { name = Model.ServiceName }, null)">@Model.ServiceName</a>
		</li>
		<li class="active">@Model.Name</li>
	</ol>
	<h1 class="title">@Model.Name</h1>
	<h3 class="text-center">
		<i class="fa fa-clock-o"></i>@Model.Duration.ToString("hh\\:mm") &nbsp;&nbsp;&nbsp;
		<i class="fa fa-dollar"></i>@Model.Price
	</h3>
	<hr />
	<div class="col-md-8 col-md-offset-2">
		@Html.Raw(Model.BodyHtml)
	</div>
</div>