	<header>
		@Html.Partial("_HeaderPartial")
	</header>

	<div class="container">
		<div class="body-content">
			@RenderBody()
		</div>
	</div>
	<footer>
		@Html.Action("_FooterPartial", "Common")
	</footer>


	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
