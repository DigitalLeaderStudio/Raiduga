@using Raiduga.Web.Localization
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<link rel="icon" href="@Url.Content("~/content/img/logo/favicon.ico")" type="image/x-icon">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - @Translations.SiteName</title>

	@Styles.Render("~/Content/css")

	@Styles.Render("~/Content/less/styles")

	@Scripts.Render("~/bundles/modernizr")

	@Scripts.Render("~/bundles/jquery")

	@if (IsSectionDefined("SEOtags"))
	{
		@RenderSection("SEOtags")
	}
</head>
<body>
	<script>
		(function (i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
				(i[r].q = i[r].q || []).push(arguments)
			}, i[r].l = 1 * new Date(); a = s.createElement(o),
			m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
		})(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

		ga('create', 'UA-90871838-1', 'auto');
		ga('send', 'pageview');
	</script>

	<header>
		@Html.Partial("_HeaderPartial")
	</header>

	<div class="container">
		<div class="body-content">
			@RenderBody()
		</div>
	</div>
	<footer>
		@Html.Action("_FooterPartial", "Common")
	</footer>


	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
