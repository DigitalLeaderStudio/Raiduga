@using Raiduga.Web.Localization
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<link rel="icon" href="@Url.Content("~/content/img/logo/favicon.ico")" type="image/x-icon">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - @Translations.Header_Title</title>

	@Styles.Render("~/Content/css")

	@Styles.Render("~/Content/less/styles")

	@Scripts.Render("~/bundles/modernizr")

	@Scripts.Render("~/bundles/jquery")

	@if (IsSectionDefined("SEOtags"))
	{
		@RenderSection("SEOtags")
	}

