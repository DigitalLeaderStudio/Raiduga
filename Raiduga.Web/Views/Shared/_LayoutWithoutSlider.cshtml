@using Raiduga.Web.Localization
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<link rel="icon" href="@Url.Content("~/content/img/logo/favicon.ico")" type="image/x-icon">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - @Translations.Header_Title</title>

	@Styles.Render("~/Content/css")

	@Styles.Render("~/Content/less/styles")

	@Scripts.Render("~/bundles/modernizr")

	@Scripts.Render("~/bundles/jquery")

	@if (IsSectionDefined("SEOtags"))
	{
		@RenderSection("SEOtags")
	}
</head>
<body>
	<script>
		(function (i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
				(i[r].q = i[r].q || []).push(arguments)
			}, i[r].l = 1 * new Date(); a = s.createElement(o),
			m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
		})(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

		ga('create', 'UA-90871838-1', 'auto');
		ga('send', 'pageview');

	</script>
	<!-- Google Code for Raiduga Conversion Page -->
	<script type="text/javascript">
		/* <![CDATA[ */
		var google_conversion_id = 860184591;
		var google_conversion_language = "en";
		var google_conversion_format = "3";
		var google_conversion_color = "ffffff";
		var google_conversion_label = "UK49CIPgqW8Qj8CVmgM";
		var google_conversion_value = 2400.00;
		var google_conversion_currency = "UAH";
		var google_remarketing_only = false;
		/* ]]> */
	</script>
	<script type="text/javascript" src="//www.googleadservices.com/pagead/conversion.js">
	</script>
	<noscript>
		<div style="display:inline;">
			<img height="1" width="1" style="border-style:none;" alt="" src="//www.googleadservices.com/pagead/conversion/860184591/?value=2400.00&amp;currency_code=UAH&amp;label=UK49CIPgqW8Qj8CVmgM&amp;guid=ON&amp;script=0" />
		</div>
	</noscript>
	<header>
		<div class="row main-menu">
			@Html.Partial("_MainMenuPartial")
		</div>
	</header>

	<div class="container">
		<div class="body-content">
			@RenderBody()
		</div>
	</div>
	<footer>
		@Html.Action("_FooterPartial", "Common")
	</footer>


	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
