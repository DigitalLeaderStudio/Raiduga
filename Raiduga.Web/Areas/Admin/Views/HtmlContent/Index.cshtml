@using Raiduga.Web.Localization
@model List<Raiduga.Web.Models.Common.HtmlContentViewModel>
@{
	ViewBag.Title = Translations.Content_Title;
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@Translations.Content_Title</h2>

<div class="about">
	@foreach (var content in Model)
	{
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title">
					<i class="fa fa-key"></i>@content.Name
					<span class="pull-right">
						<i class="fa fa-calendar"></i>
						@content.CreationDate
					</span>
				</h4>
			</div>
			<div class="panel-body">
				@Html.Raw(content.BodyHtml)
			</div>

			<div class="panel-footer">
				<a href="@Url.Action("Edit", "Contact", new { area = "Admin", id = content.Id })" t type="button" class="btn btn-default">@Translations.Edit</a>
			</div>
		</div>
	}
</div>