@using Raiduga.Web.Localization

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Администрирование</title>
	<link rel="icon" href="@Url.Content("~/content/img/favicon.ico")" type="image/x-icon">

	<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet">

	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/less")
	@Styles.Render("~/Content/timepicker-less")
	@Styles.Render("~/Content/fonts")
	@Styles.Render("~/Content/Admin/less")

	@Scripts.Render("~/bundles/modernizr")

</head>
<body class="admin">
	<div class="navbar navbar-inverse">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="title">
					@Html.ActionLink("Райдуга", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
				</div>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>
						<a href="@Url.Action( "Index", "Admin", new { area = "Admin" })"><i class="fa fa-home"></i></a>
					</li>
					<li>
						<a href="@Url.Action( "Index", "HtmlContent", new { area = "Admin" })">@Translations.Content_Title</a>
					</li>
					<li>
						<a href="@Url.Action( "Index", "Slider", new { area = "Admin" })">@Translations.Slider_Page_Title</a>
					</li>
					<li>
						<a href="@Url.Action( "Index", "UserFeedback", new { area = "Admin" })">@Translations.UserFeedback_Title</a>
					</li>
					<li>
						<a href="@Url.Action( "Index", "Service", new { area = "Admin" })">@Translations.Service_Title</a>
					</li>
					<li>
						<a href="@Url.Action("Index", "Contact", new { area = "Admin"})">@Translations.Contacts_Title</a>
					</li>
					<li>
						<a href="@Url.Action("Index", "Article", new { area = "Admin"})">@Translations.Articles_Title</a>
					</li>
					<li>
						@{
							var count = ViewBag.NewMessagesCount;
						}
						<a href="@Url.Action("Index", "Messages", new { area = "Admin" })">@Translations.Messages_Title <span class="badge">@count</span></a>
					</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>
				<address>
					Разработано: &copy; <a href="http://www.nobugsexception.com/">noBugsException</a>
				</address>
				<address>
					По всем вопросам связанным с сайтом и разработкой, обращайтесь <br />
					<i class="fa fa-envelope"></i>
					<a href="mailto:office@nobugsexception.com">office@nobugsexception.com</a><br />
					<i class="fa fa-phone"></i><a href="tel:+380961212713">+38096 121 2713</a>
				</address>
			</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/unobtrusive")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/bootstrap-timepicker")
	@RenderSection("scripts", required: false)
</body>
</html>
