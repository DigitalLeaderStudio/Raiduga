@using Raiduga.Web.Localization
@model List<Raiduga.Web.Models.Article.ArticleViewModel>

@{
	ViewBag.Title = Translations.Articles_Title;
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@Translations.Articles_Title</h2>

<div class="articles">
	<p>
		<a href="@Url.Action("Create", "Article", new { area = "Admin"})" class="btn btn-success navbar-btn">@Translations.Create</a>
	</p>

	<div class="row">
		@foreach (var item in Model)
		{
			var srcAction = item.ImageId.HasValue ?
				Url.Action("Show", "File", new { area = "", id = item.ImageId }) :
				string.Empty;
			<div class="col-md-6">
				<div class="thumbnail">
					<img src="@srcAction" alt="@item.Title" />
					<div class="caption">
						<h3>@item.Title</h3>
						<p>@item.Description</p>
						<p>
							<a href="@Url.Action("Edit", new { id = @item.Id })" class="btn btn-primary">@Translations.Edit</a>
							<a href="@Url.Action("Delete", new { id = @item.Id })" class="btn btn-danger pull-right">@Translations.Delete</a>
						</p>
					</div>
				</div>
			</div>
		}
	</div>

</div>
