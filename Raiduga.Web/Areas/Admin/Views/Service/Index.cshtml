@using Raiduga.Web.Localization
@model List<Raiduga.Web.Models.Service.ServiceViewModel>

@{
	ViewBag.Title = Translations.Service_Title;
}
<br />
<br />


<h1 class="text-center"><strong>@Translations.Service_Title</strong></h1>

<div class="services">

	@foreach (var item in Model)
	{
		<div class="row service-block">
			<div class="col-md-2">
				<img src="@Url.Action("Show", "File", new { area = "", id = item.ImageId })"  />
			</div>
			<div class="col-md-6">
				<h4><strong>@item.Name</strong></h4>
				<hr />
				<p>
					@item.Description					
				</p>
				<br />
				<a href="@Url.Action("Edit", "Service", new { id = item.Id})" class="btn btn-primary pull-right">@Translations.Edit</a>
			</div>
		</div>
	}
</div>

<div>
	@Html.ActionLink(@Translations.BackToList, "Index")
</div>